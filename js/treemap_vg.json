{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 300,
    "data": {"url": "data/Top10Export.csv"},
    "encoding": {
      "y": {
        "field": "Country",
        "type": "nominal",
        "axis": {"grid": false},
        "sort": {"field": "Export", "order": "ascending"}
      },
      "x": {
        "field": "Export",
        "type": "quantitative",
        "title": "Total Exports",
        "axis": {"grid": false}
      },
      "color": {
        "value": "steelblue"
      },
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "Export", "type": "quantitative", "format": ".2s"}
      ]
    },
    "layer": [
      {
        "mark": "bar"
      },
      {
        "mark": {"type": "text", "align": "left", "dx": 5},
        "encoding": {
          "text": {"field": "Country", "type": "nominal"}
        }
      }
    ],
    "config": {
      "view": {
        "stroke": null
      }
    }
  }
  