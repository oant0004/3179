{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 450,
    "title": {
        "text": "Country Growth for Imports and Exports",
        "anchor": "middle",
        "fontSize": 16,
        "frame": "group",
        "offset": 10
    },
    "data": {"url": "data/countrygrowth.csv"},
    "transform": [
      {
          "filter": "datum.Country === CountryFilter"
      },
      {
          "filter": {
              "field": "Country",
              "oneOf": ["Australia", "Lebanon", "Mauritania", "Tuvalu", "Zimbabwe", "Burundi", "Greece"]
          }
      }
  ],  
    "params": [
      {
        "name": "CountryFilter",
        "value": "Australia",
        "bind": {
          "input": "select",
          "options": ["Australia", "Lebanon", "Mauritania", "Tuvalu", "Zimbabwe", "Burundi", "Greece"],
          "name": "Country "
        }
      }
    ],
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {"field": "Year", "type": "temporal"},
      "y": {"field": "Country_growth", "type": "quantitative"},
      "color": {"field": "Country", "type": "nominal"}
    }
}
