{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Parallel Coordinate Plot for Dutiable and Duty-Free Tariffs",
  "data": {
    "url": "data/parallel_data.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "Australia",
          "United States",
          "Indonesia",
          "India",
          "United Kingdom",
          "China",
          "Japan",
          "Singapore",
          "New Zealand",
          "France"
        ]
      }
    },
    {"fold": ["Dutiable_Tariff", "Dutyfree_Tariff", "Specific_Tarrif", "AVE_Tarrif", "MFN"]},
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "width": 600,
  "height": 300,
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", "field": "Country"},
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {"value": 0.3},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {"type": "quantitative", "field": "Dutiable_Tariff"},
          {"type": "quantitative", "field": "Dutyfree_Tariff"},
          {"type": "quantitative", "field": "Specific_Tarrif"},
          {"type": "quantitative", "field": "AVE_Tarrif"},
          {"type": "quantitative", "field": "MFN"}
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 300}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null},
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5},
      "tick": {"orient": "horizontal"}
    }
  }
}
