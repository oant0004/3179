{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Dot Plot of Country Growth in 2021",
    "data": {
      "url": "data/Countrygrowth.csv",  
      "format": {
        "type": "csv"
      }
    },
    "width": 600,
    "height": 400,
    "mark": {
      "type": "circle",
      "opacity": 1,
      "fill": "#1f77b4"
    },
    "encoding": {
      "y": {
        "field": "Country",
        "type": "ordinal",
        "sort": "-x",
        "axis": {
          "title": "Country"
        }
      },
      "x": {
        "field": "Country_Growth",
        "type": "quantitative",
        "axis": {
          "title": "Country Growth (%)"
        }
      },
      "size": {
        "value": 100
      },
      "tooltip": [
        {"field": "Country", "type": "ordinal"},
        {"field": "Country Growth", "type": "quantitative"}
      ]
    }
  }
  